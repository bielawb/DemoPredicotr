{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "DemoPredictor/",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "copyDll",
            "type": "shell",
            "command": "cp",
            "args": [
                "${workspaceFolder}/DemoPredictor/bin/Debug/net6.0/DemoPredictor.dll",
                "${workspaceFolder}/module/DemoPredictor.dll",
                "-Force"
            ],
            "group": "build",
            "dependsOn": "build",
            "presentation": {
                "reveal": "silent"
            }
        }
    ]
}